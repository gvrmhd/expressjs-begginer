<%function msgType(type){if(type === 'error'){return 'danger';} else {return type;}}%>

<div class="alert-message">
    <%for (type of Object.keys(flash)){%>
      <div class="alert alert-<%=msgType(type)%> alert-dismissible fade show" role="alert">
        <%for (item of flash[type]) {%>
          <strong><%=type.toUpperCase()%></strong> : <%=item%><br>
        <%}%>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <%}%>
  <%if (error) {%>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      <%for (item of error) {%>
        <%- item.msg%><br>
      <%}%>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <%}%>

</div>
