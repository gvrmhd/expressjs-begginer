<%var regis = ['Title']%>

<h1><%=title%></h1>
<br>
<form action="<%=url%>" method="POST">
    <%for (i of regis){%>
        <%let x = i.toLowerCase()%>
        <div class="form-group row">
            <label for="<%=x%>" class="col-sm-1 col-form-label"><%=i%></label>
            <div class="col-sm-4">
                <input type="text" class="form-control" name="<%=x%>" placeholder="Book <%=i%>">
            </div>
        </div>
    <%}%>
    <div class="form-group row">
        <label for="Author" class="col-sm-1 col-form-label">Body</label>
        <div class="col-sm-4">
            <textarea class="form-control" name="body" rows="4" placeholder="Book Contents"></textarea>
        </div>
    </div><br>
    <div class="col-sm-5" style="padding-left: 0%;">
        <button type="submit" class="btn btn-primary btn-block">Add Article</button>
    </div>
</form>

<script>
    $('li.active').removeClass('active');
    $('#addArticle').addClass('active');
</script>