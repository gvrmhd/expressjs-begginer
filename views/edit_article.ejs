<h1><%=title%></h1>
<br>
<form action="<%=url%>" method="POST">
    <div class="form-group row">
        <label for="title" class="col-sm-1 col-form-label">Title</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" name="title" value="<%=doc.title%>">
        </div>
    </div>
    <div class="form-group row">
        <label for="Author" class="col-sm-1 col-form-label">Body</label>
        <div class="col-sm-4">
            <textarea class="form-control" name="body" rows="4"><%=doc.body%></textarea>
        </div>
    </div><br>
    <div class="col-sm-5"><button type="submit" class="btn btn-primary btn-block">Edit</button></div>
</form>

<script>
    $('li.active').removeClass('active');
</script>